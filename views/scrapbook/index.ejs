<% layout('layout') -%>

<h1><%= title %></h1>
<p class="lead">A scrapbook to remember.</p>

<hr/>

<div id="flipbook">
    <div class="hard"><%= album.name %></div> 
    <div class="hard"></div>
    <% for(var i=0;i<album.photos.length;i=i+2) { %>
        <!-- two photos per page -->
        <div>
        <img src="<%= album.photos[i].imageUrl %>" height=200/>
        <% if(i+1<album.photos.length) { %>
        <br>
        <img src="<%= album.photos[i+1].imageUrl %>" height=200/>
        <% } %>
        </div>
    <% } %>
    <div class="hard"></div>
    <div class="hard"></div>
</div>


